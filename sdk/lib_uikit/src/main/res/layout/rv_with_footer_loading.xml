<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="6dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/rv_with_footer_loading_progress"
            style="?progressBarStyle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/rv_with_footer_loading_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="@string/rv_with_footer_loading"
            android:textSize="12sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/rv_with_footer_loading_pull_to_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/rv_with_footer_pull_load_more"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/rv_with_footer_loading_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/rv_with_footer_empty"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/rv_with_footer_failure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/rv_with_footer_failure"
        android:visibility="gone"/>

</RelativeLayout>
